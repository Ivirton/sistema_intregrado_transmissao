<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Transmisões</title>
  <!-- Adicionando CSS do Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="../style.css">
  <link rel="icon" href="/pictures/sistem/logo_podium.png" type="image/png">
  <!-- Adicionando ícones do Flaticon -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
  <%- include('./components/header.ejs',{href:"transmisoes",titulo:"Transmissoes"})%>
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-10 offset-md-1 card1">
          <div class="linha">
            <h2 class="mb-4">Transmissões</h2>
          </div>
          <form class="linha" action="/createtransmisao" method="post">
            <div class="input-group mb-3">
              <input style="margin-right: 20px;" type="text" class="form-control" name="nome" placeholder="Nome">
              <button class="btn btn-primary " type="submit">Salvar</button>
            </div>
          </form>
          <table class="table table-striped">
            <thead class="thead-dark">
              <tr>
                <th>Receptor</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% transmisoes.forEach(transmisao=> { %>
                <tr>
                  <td>
                    <a target="_blank" href="/receptor?id_transmissao=<%= transmisao.id_transmissao %>">Receptor  <%= transmisao.nome %></a>
                  </td>
                  <td>
                    <a href="/deletetransmisao?id=<%= transmisao.id_transmissao %>"><i class="fa fa-trash-alt"></i></a>
                  </td>
                </tr>
                <% }) %>

            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Adicionando o JavaScript do Bootstrap -->
     <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
        
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
</body>

</html>